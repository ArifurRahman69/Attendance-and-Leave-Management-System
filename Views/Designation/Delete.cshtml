@model Attendance_and_Leave_Management_System.DataModel.Designation
@{
    ViewData["Title"] = "Delete Designation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Delete Designation</h2>
<div class="alert alert-warning">Are you sure you want to delete <strong>@Model.Name</strong>?</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
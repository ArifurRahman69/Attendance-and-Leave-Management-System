@model Attendance_and_Leave_Management_System.ViewModel.NewEmployeeRegistrationViewModel
@{
    ViewData["Title"] = "Register Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Register New Employee</h2>

<form asp-action="CreateEmployee" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-4">
        <div class="card-header">Personal Info</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="EmployeeID" class="form-label">Employee ID</label>
                    <input asp-for="EmployeeID" class="form-control" />
                    <span class="form-text text-muted">Leave blank to auto-generate.</span>
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Account Info</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Job Info</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="DesignationId" class="form-label">Designation</label>
                    <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.Designations"></select>
                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ShiftId" class="form-label">Shift</label>
                    <select asp-for="ShiftId" class="form-select" asp-items="ViewBag.Shifts"></select>
                    <span asp-validation-for="ShiftId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary btn-lg">Register Employee</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
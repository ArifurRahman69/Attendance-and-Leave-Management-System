@model IEnumerable<Attendance_and_Leave_Management_System.DataModel.Employee>
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Employees</h2>
<div class="d-flex justify-content-between mb-3">
    <div></div>
    <div>
        <a asp-controller="Admin" asp-action="CreateEmployee" class="btn btn-primary">Add Employee</a>
    </div>
</div>
@if (TempData["AdminMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
<div class="table-responsive">
    <table id="employeesTable" class="table table-striped table-bordered align-middle" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Joining Date</th>
                <th style="width:160px">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Department?.Name ?? "-"</td>
                <td>@item.Designation?.Name ?? "-"</td>
                <td>@item.DateOfJoining.ToShortDateString()</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(function () {
            $('#employeesTable').DataTable();
        });
    </script>
}